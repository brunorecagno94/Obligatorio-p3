@using WebClient.Models.DTOs.Envio
@model IEnumerable<EnvioListadoDTO>

@if (Context.Session.GetString("Rol") == "Cliente")
{
    ViewData["Title"] = "Index";

    <h1>Envíos</h1>

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @ViewBag.Mensaje
        </div>
    }

    @if (Model.Count() == 0)
    {
        <div class="alert alert-info">No hay envíos registrados.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Número de tracking
                    </th>
                    <th>
                        Tipo de envío
                    </th>
                    <th>
                        Fecha de salida
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroTracking)
                        </td>
                        <td>
                            @(item.EsUrgente ? "Urgente" : "Común")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaSalida)
                        </td>
                        <td>
                            @(item.Estado == "EN_PROCESO" ? "En proceso" : "Finalizado")
                        </td>
                        <td>
                            @Html.ActionLink("Detalle de comentarios", "Comentarios", new { id = item.Id })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <h1>No tienes permiso para ver esta página.</h1>
}