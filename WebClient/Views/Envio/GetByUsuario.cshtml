@using WebClient.Models.DTOs.Envio
@model IEnumerable<EnvioCompletoListadoDTO>

<h1>Mis Envíos</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay envíos registrados.</div>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tracking</th>
                <th>Urgente</th>
                <th>Cliente</th>
                <th>Fecha Salida</th>
                <th>Estado</th>
                <th>Comentarios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var envio in Model)
            {
                <tr>
                    <td>@envio.Id</td>
                    <td>@envio.NumeroTracking</td>
                    <td>@(envio.EsUrgente ? "Sí" : "No")</td>
                    <td>@envio.ClienteId</td>
                    <td>@envio.Fecha.ToShortDateString()</td>
                    <td>
                        @(envio.Estado == "EN_PROCESO" ? "En proceso" : "Finalizado")
                    </td>
                    <td>
                        @if (envio.Comentarios != null && envio.Comentarios.Any())
                        {
                            <ul class="mb-0 ps-3">
                                @foreach (var comentario in envio.Comentarios)
                                {
                                    <li>
                                        <small><strong>@comentario.FechaComentario.ToString("dd/MM/yyyy HH:mm"):</strong> @comentario.TextoComentario</small>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <em>Sin comentarios</em>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
